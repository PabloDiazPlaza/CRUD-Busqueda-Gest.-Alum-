@model Prueba2.Pablo.Diaz.Models.AlumnoModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>AlumnoModel</h4>
            <br />
            <br />
            <p>@ViewBag.Mensaje</p>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(amodel => amodel.Rut, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(amodel => amodel.Rut, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input name="Rut" id="Rut" value="@Model.Rut" class="form-control" placeholder="Ej: 12345678-9" />
                    @Html.ValidationMessageFor(amodel => amodel.Rut, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(amodel => amodel.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(amodel => amodel.Nombre, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input name="Nombre" id="Nombre" value="@Model.Nombre" class="form-control" placeholder="Juan Antonio" />
                    @Html.ValidationMessageFor(amodel => amodel.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(amodel => amodel.Apellidos, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(amodel => amodel.Apellidos, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input name="Apellidos" id="Apellidos" value="@Model.Apellidos" class="form-control" placeholder="Perez Carrasco" />
                    @Html.ValidationMessageFor(amodel => amodel.Apellidos, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(amodel => amodel.Edad, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(amodel => amodel.Edad, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input name="Edad" id="Edad" value="@Model.Edad" class="form-control" placeholder="Ej: 35 " />
                    @Html.ValidationMessageFor(amodel => amodel.Edad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(amodel => amodel.Sexo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(amodel => amodel.Sexo, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input name="Sexo" id="Sexo" value="@Model.Sexo" class="form-control" placeholder="1 Masculino 2 Femenino" />
                    @Html.ValidationMessageFor(amodel => amodel.Sexo, "", new { @class = "text-danger" })
                </div>
            </div>

            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear Alumno" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Volver", "Index")
    </div>
</body>
</html>
