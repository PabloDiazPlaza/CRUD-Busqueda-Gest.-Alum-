                <dd>
                    @Html.DisplayFor(amodel => amodel.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(amodel => amodel.Apellidos)
                </dt>

                <dd>
                    @Html.DisplayFor(amodel => amodel.Apellidos)
                </dd>

                <dt>
                    @Html.DisplayNameFor(amodel => amodel.Edad)
                </dt>

                <dd>
                    @Html.DisplayFor(amodel => amodel.Edad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(amodel => amodel.Sexo)
                </dt>

                <dd>
                    @Html.DisplayFor(amodel => amodel.Sexo)
