                <dt>
                    @Html.DisplayNameFor(amodel => amodel.Rut)
                </dt>

                <dd>
                    @Html.TextBoxFor(amodel => amodel.Rut)
                </dd>

                <dt>
                    @Html.DisplayNameFor(amodel => amodel.Nombre)
