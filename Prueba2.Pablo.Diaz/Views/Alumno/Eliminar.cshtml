@model Prueba2.Pablo.Diaz.Models.AlumnoModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>
<body>
    <h3>¿Está seguro de que desea eliminar A Alumno?</h3>
    <div>
        <h4>Alumno</h4>
        <hr />
