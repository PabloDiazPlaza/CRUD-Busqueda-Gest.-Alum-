@model Prueba2.Pablo.Diaz.Models.AlumnoModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Buscar</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div>
                <label>@Html.LabelFor(amodel => amodel.Rut, htmlAttributes: new { @class = "control-label col-md-2" })</label>
                <input name="Rut" id="Rut" value="@Model.Rut" class="form-control" placeholder="Ej: 12345678-9"/>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Buscar" class="btn btn-default"  />
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Volver", "Index")

        </div>
    </div>
</body>
</html>
